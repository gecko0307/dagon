module gscript.serializer;

import std.conv;
import std.utf;

import gscript.instructions;
import gscript.dynamic;

enum GSIR_MAGIC = "GSIR";
enum int GSIR_VERSION = 100;

ubyte[] saveBytecode(GsInstruction[] instructions)
{
    ubyte[] buffer;
    buffer ~= cast(ubyte[])(GSIR_MAGIC);
    
    int ver = GSIR_VERSION;
    buffer ~= (cast(ubyte*)&ver)[0 .. int.sizeof];
    
    foreach(instr; instructions)
    {
        buffer ~= cast(ubyte)instr.type;

        auto operandType = instr.operandType;
        buffer ~= operandType;
        if (operandType == GsOperandType.Double)
        {
            double val = instr.operand.asNumber;
            buffer ~= (cast(ubyte*)&val)[0 .. double.sizeof];
        }
        else if (operandType == GsOperandType.String)
        {
            auto str = instr.operand.asString;
            auto len = cast(uint)str.length;
            buffer ~= (cast(ubyte*)&len)[0 .. uint.sizeof];
            buffer ~= cast(ubyte[])str;
        }
    }
    
    return buffer;
}

GsInstruction[] loadBytecode(ubyte[] code)
{
    GsInstruction[] instructions;
    
    size_t i = 0;

    if (code.length < 4 + int.sizeof)
        throw new Exception("Invalid or corrupted IR file");

    string magic = cast(string)code[0 .. 4];
    if (magic != GSIR_MAGIC)
        throw new Exception("Not a GSIR file");

    i = 4;

    int ver = *cast(int*)(code.ptr + i);
    i += int.sizeof;

    if (ver != GSIR_VERSION)
        throw new Exception("Unsupported IR version");

    while (i < code.length)
    {
        if (i + 2 > code.length)
            break;

        auto type = cast(GsInstructionType)code[i++];
        auto operandType = cast(GsOperandType)code[i++];

        GsDynamic operand;

        final switch(operandType)
        {
            case GsOperandType.Double:
                static if (double.sizeof == 8)
                {
                    if (i + 8 > code.length)
                        break;

                    double val;
                    ubyte[8] bytes = code[i .. i+8];
                    val = *cast(double*)bytes.ptr;
                    i += 8;

                    operand = GsDynamic(val);
                }
                break;

            case GsOperandType.String:
                if (i + 4 > code.length)
                    break;

                uint len = *cast(uint*)(code.ptr + i);
                i += 4;

                if (i + len > code.length)
                    break;

                string str = cast(string)(code[i .. i + len]);
                validate(str);

                operand = GsDynamic(str);
                i += len;
                break;

            case GsOperandType.None:
                operand = GsDynamic();
                break;
        }

        instructions ~= GsInstruction(type, operand);
    }

    return instructions;
}
