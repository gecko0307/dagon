{
    "name": "dagon_platform",
    "description": "Dagon Platform",
    "homepage": "https://gecko0307.github.io/dagon",
    "license": "BSL-1.0",
    "authors": [
        "Timur Gafarov"
    ],
    "dependencies": {
        "dagon": { "path": ".." },
        "dagon:audio": { "path": ".." }
    },
    "buildRequirements": [
        "allowWarnings"
    ],
    "lflags-linux": ["-rpath=$$ORIGIN"],
    "postBuildCommands-windows": [
        "$PACKAGE_DIR\\bin/rcedit-x64 \"dagon_platform.exe\" --set-file-version \"1.0.0.0\" --set-product-version \"1.0.0\" --set-icon \"$PACKAGE_DIR\\res\\icon.ico\" --application-manifest \"$PACKAGE_DIR\\res\\dagon_platform.manifest\""
    ]
}
