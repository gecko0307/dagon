{
    "name": "dagon",
    "description": "3D game engine for D",
    "homepage": "https://gecko0307.github.io/dagon",
    "license": "BSL-1.0",
    "authors": [
        "Timur Gafarov",
        "Rafał Ziemniewski",
        "Björn Roberg",
        "dayllenger",
        "Mateusz Muszyński"
    ],

    "importPaths": ["src"],
    "sourcePaths": ["src"],
    "stringImportPaths": ["shaders", "data/__internal"],

    "dependencies": {
        "dlib": "~master",
        "bindbc-opengl": "~>0.8.0",
        "bindbc-sdl": "~>0.8.0"
    },

    "versions": [
        "SDL_205",
        "GL_40",
        "GL_KHR_debug",
        "FT_28"
    ],

    "buildRequirements":[
        "allowWarnings"
    ],
    
    "configurations": [
        {
            "name": "library",
            "targetType": "library",
            "dependencies": {
                "bindbc-freetype": "~>0.5.0"
            }
        },
        {
            "name": "Minimal",
            "targetType": "library",
            "versions": ["NoFreetype", "NoNuklear"]
        },
        {
            "name": "NoFreetype",
            "targetType": "library",
            "dependencies": {
                "bindbc-nuklear": "~>0.2.0"
            },
            "versions": ["NoFreetype"]
        },
        {
            "name": "NoNuklear",
            "targetType": "library",
            "dependencies": {
                "bindbc-freetype": "~>0.5.0"
            },
            "versions": ["NoNuklear"]
        }
    ],
    
    "copyFiles-windows-x86": ["lib/x86/*.dll"],
    "copyFiles-windows-x86_64": ["lib/x64/*.dll"],
    "copyFiles": ["data", "gamecontrollerdb.txt"],
    
    "subPackages": [
		{
			"name": "nuklear",
            "importPaths": ["nuklear/src"],
            "sourcePaths": ["nuklear/src"],
            "dependencies": {
                "dagon": "*",
                "dlib": "~master",
                "bindbc-nuklear": "~>0.2.0"
            },
            
            "versions": [
                "NK_ALL"
            ]
		}
	]
}
