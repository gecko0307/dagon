{
    "name": "dagon",
    "description": "3D game engine for D",
    "homepage": "https://gecko0307.github.io/dagon",
    "license": "BSL-1.0",
    "authors": [
        "Timur Gafarov",
        "Rafał Ziemniewski",
        "Björn Roberg",
        "Viktor M.",
        "Mateusz Muszyński",
        "Denis Feklushkin",
        "Konstantin Menshikov",
        "Vlad Davydov",
        "Joshua T. Fisher",
        "Vadim Lopatin"
    ],

    "importPaths": [
        "src"
    ],
    
    "sourcePaths": [
        "src"
    ],
    
    "stringImportPaths": ["data/__internal"],

    "dependencies": {
        "dlib": "~>1.3.3",
        "bindbc-loader": "1.1.4",
        "bindbc-opengl": "1.1.1",
        "bindbc-sdl": "1.5.2",
        "bindbc-freetype": "1.3.2"
    },

    "versions": [
        "SDL_2_30",
        "SDL_Image_2_8",
        "GL_43",
        "GL_ARB",
        "FT_28"
    ],

    "buildRequirements":[
        "allowWarnings"
    ],
    
    "libs-windows": ["user32", "comdlg32"],
    
    "configurations": [
        {
            "name": "library",
            "targetType": "library"
        }
    ],
    
    "copyFiles": ["data", "gamecontrollerdb.txt"],
    "copyFiles-linux-x86_64": ["lib/linux-x64/*"],
    "copyFiles-windows-x86_64": ["lib/windows-x64/*"],
    
    "subPackages": [
        "extensions/assimp",
        "extensions/audio",
        "extensions/exformats",
        "extensions/imgui",
        "extensions/iqm",
        "extensions/ktx",
        "extensions/newton",
        "extensions/nuklear",
        "extensions/physfs",
        "extensions/video",
        "init-exec"
    ],
    
    "-ddoxTool": "scod"
}
