module dagon.ui.axes;

import dlib.core.ownership;
import dlib.math.vector;

import dagon.core.bindings;
import dagon.graphics.drawable;
import dagon.graphics.state;
import dagon.graphics.mesh;

class TranslationAxes: Owner, Drawable
{
    Vector3f[6] lineVertices = [
        Vector3f(0.0f, 0.0f, 0.0f),
        Vector3f(1.0f, 0.0f, 0.0f),
        Vector3f(0.0f, 0.0f, 0.0f),
        Vector3f(0.0f, 1.0f, 0.0f),
        Vector3f(0.0f, 0.0f, 0.0f),
        Vector3f(0.0f, 0.0f, 1.0f)
    ];
    
    Vector4f[6] lineColors = [
        Vector4f(1.0f, 0.0f, 0.0f, 1.0f),
        Vector4f(1.0f, 0.0f, 0.0f, 1.0f),
        Vector4f(0.0f, 1.0f, 0.0f, 1.0f),
        Vector4f(0.0f, 1.0f, 0.0f, 1.0f),
        Vector4f(0.0f, 0.0f, 1.0f, 1.0f),
        Vector4f(0.0f, 0.0f, 1.0f, 1.0f)
    ];
    
    GLuint linesVertexBuffer = 0;
    GLuint linesColorBuffer = 0;
    GLuint linesVertexArray = 0;
    
    Vector3f[9] arrowVertices = [
        Vector3f(1.0f, 0.0f, 0.0f),
        Vector3f(0.9f, 0.0f, 0.05f),
        Vector3f(0.9f, 0.0f, -0.05f),
        
        Vector3f(0.0f, 1.0f, 0.0f),
        Vector3f(0.0f, 0.9f, 0.05f),
        Vector3f(0.0f, 0.9f, -0.05f),
        
        Vector3f(0.0f, 0.0f, 1.0f),
        Vector3f(0.05f, 0.0f, 0.9f),
        Vector3f(-0.05f, 0.0f, 0.9f)
    ];
    
    Vector4f[9] arrowColors = [
        Vector4f(1.0f, 0.0f, 0.0f, 1.0f),
        Vector4f(1.0f, 0.0f, 0.0f, 1.0f),
        Vector4f(1.0f, 0.0f, 0.0f, 1.0f),
        Vector4f(0.0f, 1.0f, 0.0f, 1.0f),
        Vector4f(0.0f, 1.0f, 0.0f, 1.0f),
        Vector4f(0.0f, 1.0f, 0.0f, 1.0f),
        Vector4f(0.0f, 0.0f, 1.0f, 1.0f),
        Vector4f(0.0f, 0.0f, 1.0f, 1.0f),
        Vector4f(0.0f, 0.0f, 1.0f, 1.0f)
    ];
    
    GLuint arrowsVertexBuffer = 0;
    GLuint arrowsColorBuffer = 0;
    GLuint arrowsVertexArray = 0;
    
    bool dataReady = false;
    bool canRender = false;
    
    this(Owner owner)
    {
        super(owner);
    }
    
    ~this()
    {
    }
    
    void prepareVAO()
    {
        glGenBuffers(1, &linesVertexBuffer);
        glBindBuffer(GL_ARRAY_BUFFER, linesVertexBuffer);
        glBufferData(GL_ARRAY_BUFFER, lineVertices.length * float.sizeof * 3, lineVertices.ptr, GL_STATIC_DRAW);
        
        glGenBuffers(1, &linesColorBuffer);
        glBindBuffer(GL_ARRAY_BUFFER, linesColorBuffer);
        glBufferData(GL_ARRAY_BUFFER, lineColors.length * float.sizeof * 4, lineColors.ptr, GL_STATIC_DRAW);
        
        glGenVertexArrays(1, &linesVertexArray);
        glBindVertexArray(linesVertexArray);
        
        glEnableVertexAttribArray(VertexAttrib.Vertices);
        glBindBuffer(GL_ARRAY_BUFFER, linesVertexBuffer);
        glVertexAttribPointer(VertexAttrib.Vertices, 3, GL_FLOAT, GL_FALSE, 0, null);
        
        glEnableVertexAttribArray(VertexAttrib.Colors);
        glBindBuffer(GL_ARRAY_BUFFER, linesColorBuffer);
        glVertexAttribPointer(VertexAttrib.Colors, 4, GL_FLOAT, GL_FALSE, 0, null);
        
        glGenBuffers(1, &arrowsVertexBuffer);
        glBindBuffer(GL_ARRAY_BUFFER, arrowsVertexBuffer);
        glBufferData(GL_ARRAY_BUFFER, arrowVertices.length * float.sizeof * 3, arrowVertices.ptr, GL_STATIC_DRAW);
        
        glGenBuffers(1, &arrowsColorBuffer);
        glBindBuffer(GL_ARRAY_BUFFER, arrowsColorBuffer);
        glBufferData(GL_ARRAY_BUFFER, arrowColors.length * float.sizeof * 4, arrowColors.ptr, GL_STATIC_DRAW);
        
        glGenVertexArrays(1, &arrowsVertexArray);
        glBindVertexArray(arrowsVertexArray);
        
        glEnableVertexAttribArray(VertexAttrib.Vertices);
        glBindBuffer(GL_ARRAY_BUFFER, arrowsVertexBuffer);
        glVertexAttribPointer(VertexAttrib.Vertices, 3, GL_FLOAT, GL_FALSE, 0, null);
        
        glEnableVertexAttribArray(VertexAttrib.Colors);
        glBindBuffer(GL_ARRAY_BUFFER, arrowsColorBuffer);
        glVertexAttribPointer(VertexAttrib.Colors, 4, GL_FLOAT, GL_FALSE, 0, null);
        
        glBindVertexArray(0);
        
        canRender = true;
    }
    
    void render(GraphicsState* state)
    {
        if (!dataReady)
        {
            prepareVAO();
            dataReady = true;
        }
        
        if (!canRender)
            return;
        
        glBindVertexArray(linesVertexArray);
        glDrawArrays(GL_LINES, 0, 6);
        glBindVertexArray(arrowsVertexArray);
        glDrawArrays(GL_TRIANGLES, 0, 9);
        glBindVertexArray(0);
    }
}

