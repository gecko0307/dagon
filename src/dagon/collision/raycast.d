module dagon.collision.raycast;

import dlib.math.vector;
import dlib.math.matrix;
import dlib.math.utils;
import dlib.geometry.ray;

import dagon.collision.contact;
import dagon.collision.geometry;
import dagon.collision.shape;
import dagon.collision.jss;

alias CastResult = Contact;

bool rayVsShape(
    Vector3f rayStart,
    Vector3f rayDir,
    CollisionShape shape,
    float maxCastDistance,
    out CastResult res)
{   
    float hitDistance = 0;
    Vector3f hitPoint = rayStart;
    Vector3f hitNormal = Vector3f(0, 0, 0);
    
    Vector3f v = hitPoint - shape.supportPoint(Vector3f(0, 0, 0));
    float vSqrd = v.lengthsqr;
    
    Vector3f p = Vector3f(0, 0, 0);
    Vector3f w = Vector3f(0, 0, 0);

    float v_dot_w = 0;
    float v_dot_r = 0;
    
    JohnsonSimplexSolver jss;
    jss.initialize();
    
    float eps = EPSILON * 100;
    
    uint iterations = 0;
    uint maxIterations = 1000;
    
    bool hit = false;
    
    while(true)
    {
        if ((vSqrd <= eps * jss.getMaxVertexSqrd) || jss.isFullSimplex)
        {
            hit = true;
            break;
        }
        
        if (hitDistance > maxCastDistance)
            break;
        
        if (iterations >= maxIterations)
            break;
        
        p = shape.supportPoint(v);
        w = hitPoint - p;

        v_dot_w = dot(v, w);
        
        if (v_dot_w > 0)
        {
            v_dot_r = dot(v, rayDir);

            if (v_dot_r >= 0)
                break;

            hitDistance  = hitDistance - v_dot_w / v_dot_r;
            hitPoint  = rayStart + rayDir * hitDistance;
            hitNormal = v;
            
            if (!jss.isEmptySimplex)
            {
                for (byte i = 0; i < 4; ++i)
                    if (jss.isSimplexPoint(i))
                        jss.setPoint(i, 
                            hitPoint - jss.getSupportPointOnB(i), 
                            hitPoint,  jss.getSupportPointOnB(i));
                
                jss.updateMaxVertex();

                for (byte i = 0; i < 4; ++i)
                    if (jss.isSimplexPoint(i))
                        jss.updateEdges(i);

                for (byte i = 0; i < 4; ++i)
                    if (jss.isSimplexPoint(i))
                        jss.updateDeterminants(i);
            }
        }
        
        jss.addPoint(w, hitPoint, p);

        bool reduceOk = jss.reduceSimplex();
        if (reduceOk)
            jss.calcClosestPoint(v);
        else
            jss.backupCalcClosestPoint(v);
            
        vSqrd = v.lengthsqr;
        ++iterations;
    }
    
    if (hit)
    {
        res.fact = true;
        res.point = hitPoint;
        res.normal = hitNormal;
        res.normal.normalize();
        res.hitDistance = hitDistance;
    }
    
    return hit;
}

bool rayVsShape(
    Ray ray,
    CollisionShape shape,
    float maxCastDistance,
    out CastResult res)
{
    Vector3f rayStart = ray.p0;
    Vector3f rayDir = (ray.p1 - ray.p0).normalized;
    return rayVsShape(rayStart, rayDir, shape, maxCastDistance, res);
}
