module dagon.extra.verlet;

import dlib.core.ownership;
import dlib.core.memory;
import dlib.math.vector;
import dlib.math.transformation;
import dlib.geometry.obb;
import dlib.geometry.sphere;
import dlib.geometry.intersection;
import dlib.container.array;

class VerletChain: Owner
{
    uint iterations = 40;
    uint nodesCount = 20;
    float nodeDistance = 0.3f;
    float nodeMass = 1.0f;
    float stiffness = 1.0f;
    Vector3f gravity = Vector3f(0.0f, -9.8f, 0.0f);
    Vector3f attachPosition;
    Vector3f[] positions;
    Vector3f[] oldPositions;
    Array!OBB collisionBoxes;
    
    this(Vector3f attachPosition, uint nodesCount, float nodeDistance, Owner o)
    {
        super(o);
        this.attachPosition = attachPosition;
        this.nodesCount = nodesCount;
        this.nodeDistance = nodeDistance;
        
        positions = New!(Vector3f[])(nodesCount);
        oldPositions = New!(Vector3f[])(nodesCount);
        
        Vector3f pos = attachPosition;
        
        for (size_t i = 0; i < positions.length; i++)
        {
            positions[i] = pos;
            oldPositions[i] = pos;
            pos.y -= nodeDistance;
        }
    }
    
    ~this()
    {
        Delete(positions);
        Delete(oldPositions);
    }
    
    void addCollisionBox(Vector3f position, Vector3f extent)
    {
        OBB obb;
        obb.extent = extent;
        obb.transform = translationMatrix(position);
        collisionBoxes.append(obb);
    }
    
    void update(double dt)
    {
        simulate(dt);
        for (size_t iteration = 0; iteration < iterations; iteration++)
        {
            applyConstraints();
            for (size_t i = 0; i < positions.length; i++)
                detectCollisions(i);
        }
    }
    
    void simulate(double dt)
    {
        for (size_t i = 0; i < positions.length; i++)
        {
            Vector3f temp = positions[i];
            positions[i] += (temp - oldPositions[i]) + gravity * nodeMass * (dt * dt);
            oldPositions[i] = temp;
        }
    }
    
    void detectCollisions(size_t i)
    {
        Sphere sphere = Sphere(positions[i], nodeDistance * 0.5f);
        foreach(obb; collisionBoxes)
        {
            Intersection isec = intrSphereVsOBB(sphere, obb);
            if (isec.fact)
            {
                Vector3f oldPos = positions[i];
                positions[i] += isec.normal * isec.penetrationDepth * 1.0f;
                oldPositions[i] = oldPos;
            }
        }
    }
    
    void applyConstraints()
    {
        for (size_t i = 0; i < positions.length - 1; i++)
        {
            Vector3f pos1 = positions[i];
            Vector3f pos2 = positions[i + 1];
            
            if (i == 0)
                positions[i] = attachPosition;
            
            Vector3f diffVec = pos1 - pos2;
            float dist = distance(pos1, pos2);
            float difference = 0;
            
            if (dist > 0.0f)
                difference = (nodeDistance - dist) / dist;
            
            Vector3f translation = diffVec * (0.5f * difference) * stiffness;
            
            positions[i] += translation;
            positions[i + 1] -= translation;
        }
    }
}
