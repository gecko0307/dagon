module dagon.core.graphicstablet;

import dlib.core.ownership;

import dagon.core.bindings;
import dagon.core.event;
import dagon.core.logger;

version(Windows)
{
    import core.sys.windows.windows;
    import dagon.core.wintab;
    
    alias TabletPacket = PACKET!PK_ALL;
}

import loader = bindbc.loader.sharedlib;

class GraphicsTablet: Owner, CustomInputDevice
{
   protected:
    EventManager eventManager;
    
    int displayWidth = 0;
    int displayHeight = 0;
    
    version(Windows)
    {
        HCTX ctx = null;
        int maxPenPressure;
    }
    
    bool initialized = false;
    
   public:
    
    bool enabled = true;
    
    this(Owner owner)
    {
        super(owner);
    }
    
    bool initialize(EventManager eventManager)
    {
        this.eventManager = eventManager;
        
        // TODO: move this to EventManager
        SDL_DisplayMode displayMode;
        SDL_GetCurrentDisplayMode(0, &displayMode);
        displayWidth = displayMode.w;
        displayHeight = displayMode.h;
        
        // TODO: move this to EventManager
        SDL_SysWMinfo wmInfo;
        SDL_VERSION(&wmInfo.version_);
        SDL_GetWindowWMInfo(eventManager.window, &wmInfo);
        
        version(Windows)
        {
            // TODO: move this to EventManager
            HWND hwnd = wmInfo.info.win.window;
            
            LOGCONTEXT lc;
            if (WTInfo(WTI_DEFSYSCTX, 0, &lc))
            {
                AXIS pressure;
                
                lc.lcOptions |= CXO_MESSAGES;
                lc.lcPktData = TabletPacket.PACKETDATA;
                lc.lcPktMode = 0;
                lc.lcMoveMask = TabletPacket.PACKETDATA;
                
                if (WTInfo(WTI_DEVICES, DVC_NPRESSURE, &pressure))
                    maxPenPressure = pressure.axMax;
                else
                    maxPenPressure = 0;
                
                ctx = WTOpen(hwnd, &lc, true);
                WTEnable(ctx, TRUE);
                
                initialized = true;
            }
            else
            {
                initialized = false;
            }
        }
        
        return initialized;
    }
    
    bool pollEvents()
    {
        if (!initialized || !enabled)
            return false;
        
        // TODO: move this to EventManager
        int windowX = 0;
        int windowY = 0;
        SDL_GetWindowPosition(eventManager.window, &windowX, &windowY);
        
        version(Windows)
        {
            TabletPacket packet;
            if (WTPacketsGet(ctx, 1, &packet))
            {
                int x = packet.pkX - windowX;
                int y = (displayHeight - packet.pkY) - windowY;
                
                if (x < 0 || y < 0 || x > eventManager.windowWidth || y > eventManager.windowHeight)
                    return false;
                
                float pressure = cast(float)packet.pkNormalPressure / cast(float)maxPenPressure;
                
                Event penEvent;
                penEvent.type = EventType.PenMotion;
                penEvent.x = x;
                penEvent.y = y;
                penEvent.pressure = pressure;
                eventManager.addEvent(penEvent);
                
                return true;
            }
        }
        
        return false;
    }
}
