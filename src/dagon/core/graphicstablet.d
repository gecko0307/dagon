module dagon.core.graphicstablet;

import dlib.core.ownership;

import dagon.core.bindings;
import dagon.core.event;
import dagon.core.logger;

version(Windows)
{
    import core.sys.windows.windows;
    import dagon.core.wintab;
    
    alias TabletPacket = PACKET!PK_ALL;
}
else version(linux)
{
    // TODO
}

import loader = bindbc.loader.sharedlib;

/**
 * PenMotion events emitter for Wacom tablets (as well as all Wintab-compliant ones).
 */
class GraphicsTablet: Owner, InputDevice
{
   protected:
    EventManager eventManager;
    
    version(Windows)
    {
        HCTX ctx = null;
        int maxPenPressure;
    }
    else version(linux)
    {
        // TODO
    }
    
    bool initialized = false;
    
   public:
    
    bool enabled = true;
    
    this(Owner owner)
    {
        super(owner);
    }
    
    bool initialize(EventManager eventManager)
    {
        this.eventManager = eventManager;
        
        version(Windows)
        {
            HWND hwnd = eventManager.wmInfo.info.win.window;
            
            LOGCONTEXT lc;
            if (WTInfo(WTI_DEFSYSCTX, 0, &lc))
            {
                AXIS pressure;
                
                lc.lcOptions |= CXO_MESSAGES;
                lc.lcPktData = TabletPacket.PACKETDATA;
                lc.lcPktMode = 0;
                lc.lcMoveMask = TabletPacket.PACKETDATA;
                
                if (WTInfo(WTI_DEVICES, DVC_NPRESSURE, &pressure))
                    maxPenPressure = pressure.axMax;
                else
                    maxPenPressure = 0;
                
                ctx = WTOpen(hwnd, &lc, true);
                WTEnable(ctx, TRUE);
                
                initialized = true;
            }
            else
            {
                initialized = false;
            }
        }
        else version(linux)
        {
            // TODO
        }
        
        return initialized;
    }
    
    bool pollEvents()
    {
        if (!initialized || !enabled)
            return false;
        
        version(Windows)
        {
            TabletPacket packet;
            if (WTPacketsGet(ctx, 1, &packet))
            {
                int x = packet.pkX - eventManager.windowX;
                int y = (eventManager.displayHeight - packet.pkY) - eventManager.windowY;
                
                if (x < 0 || y < 0 || x > eventManager.windowWidth || y > eventManager.windowHeight)
                    return false;
                
                float pressure = cast(float)packet.pkNormalPressure / cast(float)maxPenPressure;
                
                Event penEvent;
                penEvent.type = EventType.PenMotion;
                penEvent.x = x;
                penEvent.y = y;
                penEvent.pressure = pressure;
                eventManager.addEvent(penEvent);
                
                return true;
            }
        }
        else version(linux)
        {
            // TODO
        }
        
        return false;
    }
}
