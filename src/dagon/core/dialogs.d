/**
 * Provides cross-platform open and save dialogs.
 *
 * Description:
 * The `dagon.core.dialogs` module provides functions that display native
 * dialogs to open and save a file. Under Linux they use Zenity (for GNOME)
 * or kdialog (for KDE).
 *
 * Copyright: Timur Gafarov 2025
 * License: $(LINK2 https://boost.org/LICENSE_1_0.txt, Boost License 1.0).
 * Authors: Timur Gafarov
 */
module dagon.core.dialogs;

import std.process;
import std.stdio;
import std.string;
import std.algorithm;

version(Windows)
{
    import core.sys.windows.windows;
    import std.conv;
    import std.utf: toUTF16z;
}

/// File open dialog.
string openFileDialog(string[] filters = ["*.*"], string title = "Select a file")
{
    string result;
    
    version(Windows)
    {
        wchar[260] buffer;
        OPENFILENAMEW ofn;
        ofn.lStructSize = OPENFILENAMEW.sizeof;
        ofn.hwndOwner = null;
        ofn.lpstrFile = buffer.ptr;
        ofn.lpstrFile[0] = '\0';
        ofn.nMaxFile = buffer.length;
        
        string filterString;
        foreach(pattern; filters)
        {
            string desc = pattern == "*.*" ? "All Files" : pattern;
            filterString ~= desc ~ "\0" ~ pattern ~ "\0";
        }
        filterString ~= "\0";
        
        ofn.lpstrFilter = toUTF16z(filterString);
        ofn.nFilterIndex = 1;
        ofn.lpstrFileTitle = null;
        ofn.nMaxFileTitle = 0;
        ofn.lpstrInitialDir = null;
        ofn.lpstrTitle = toUTF16z(title);
        ofn.Flags = OFN_PATHMUSTEXIST | OFN_FILEMUSTEXIST;

        if (GetOpenFileNameW(&ofn))
            return to!string(fromStringz(buffer.ptr));
        else
            return "";
    }
    else version(linux)
    {
        if (executeShell("which zenity").status == 0)
        {
            string filterArg;
            if (filters.length && filters[0] != "*.*")
                filterArg = " --file-filter='" ~ filters.join(" ") ~ "'";
            result = executeShell("zenity --file-selection --title='" ~ title ~ "'" ~ filterArg).output.strip;
        }
        else if (executeShell("which kdialog").status == 0)
        {
            string filterArg = filters.length ? filters[0] : "*.*";
            result = executeShell("kdialog --getopenfilename . '" ~ filterArg ~ "' --title '" ~ title ~ "'").output.strip;
        }
    }
    
    return result;
}

/// File save dialog.
string saveFileDialog(string[] filters = ["*.*"], string title = "Save file as")
{
    string result;

    version(Windows)
    {
        wchar[260] buffer;
        OPENFILENAMEW ofn;
        ofn.lStructSize = OPENFILENAMEW.sizeof;
        ofn.hwndOwner = null;
        ofn.lpstrFile = buffer.ptr;
        ofn.lpstrFile[0] = '\0';
        ofn.nMaxFile = buffer.length;

        string filterString;
        foreach (pattern; filters)
        {
            string desc = pattern == "*.*" ? "All Files" : pattern;
            filterString ~= desc ~ "\0" ~ pattern ~ "\0";
        }
        filterString ~= "\0";

        ofn.lpstrFilter = toUTF16z(filterString);
        ofn.nFilterIndex = 1;
        ofn.lpstrTitle = toUTF16z(title);
        ofn.Flags = OFN_OVERWRITEPROMPT | OFN_PATHMUSTEXIST;

        if (GetSaveFileNameW(&ofn))
            return to!string(fromStringz(buffer.ptr));
        else
            return "";
    }
    else version(linux)
    {
        if (executeShell("which zenity").status == 0)
        {
            string filterArg;
            if (filters.length && filters[0] != "*.*")
                filterArg = " --file-filter='" ~ filters.join(" ") ~ "'";
            result = executeShell("zenity --file-selection --save --confirm-overwrite --title='" ~ title ~ "'" ~ filterArg).output.strip;
        }
        else if (executeShell("which kdialog").status == 0)
        {
            string filterArg = filters.length ? filters[0] : "*.*";
            result = executeShell("kdialog --getsavefilename . '" ~ filterArg ~ "' --title '" ~ title ~ "'").output.strip;
        }
    }

    return result;
}
