module gscript.stdlib.str;

import std.array;
import std.ascii;
import std.conv;

import gscript.arena;
import gscript.dynamic;
import gscript.vm;

class GsGlobalStr: GsArenaObject
{
    this(GsArena arena)
    {
        super(arena);
        set("format", GsDynamic(&mFormat));
    }
    
    GsDynamic mFormat(GsDynamic[] args)
    {
        if (args.length < 1)
            return GsDynamic(0);

        if (args[1].type != GsDynamicType.String)
            return GsDynamic(0);
        
        string str = args[1].asString;
        
        if (args.length == 2)
            return GsDynamic(str);

        auto formatArgs = args[1..$];

        auto appOutput = appender!string();
        auto appIndex = appender!string();
        bool expectIndex = false;

        foreach(i, c; str)
        {
            if (c == '%')
            {
                if (expectIndex)
                {
                    expectIndex = false;
                    appOutput.put(c);
                }
                else
                {
                    expectIndex = true;
                    appIndex = appIndex.init;
                }
            }
            else if (isDigit(c))
            {
                if (expectIndex)
                    appIndex.put(c);
                else
                    appOutput.put(c);
            }
            else
            {
                if (expectIndex)
                {
                    expectIndex = false;
                    string data = appIndex.data;
                    // TODO: check if data is number
                    size_t index = to!size_t(data);
                    // TODO: check if index is valid
                    appOutput.put(formatArgs[index + 1].toString);
                }

                appOutput.put(c);
            }
        }

        if (expectIndex)
        {
            expectIndex = false;
            string data = appIndex.data;
            // TODO: check if data is number
            size_t index = to!size_t(data);
            // TODO: check if index is valid
            appOutput.put(formatArgs[index + 1].toString);
        }

        return GsDynamic(appOutput.data);
    }
}
