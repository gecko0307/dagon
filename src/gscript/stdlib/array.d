module gscript.stdlib.array;

import gscript.arena;
import gscript.dynamic;
import gscript.vm;

class GsGlobalArray: GsArenaObject
{
    this(GsArena arena)
    {
        super(arena);
        set("remove", GsDynamic(&mRemove));
        set("removeFront", GsDynamic(&mRemoveFront));
        set("removeBack", GsDynamic(&mRemoveBack));
        set("insert", GsDynamic(&mInsert));
        set("slice", GsDynamic(&mSlice));
    }
    
    GsDynamic mRemove(GsDynamic[] args)
    {
        if (args.length < 3)
            return GsDynamic();
        
        if (args[1].type != GsDynamicType.Array)
            return GsDynamic();
        
        auto arr = args[1].asArray;
        if (arr.length == 0)
            return GsDynamic(arr);
        
        auto removeIndex = cast(size_t)args[2].asNumber;
        auto newArr = arena.create!(GsDynamic[])(arr.length - 1);
        for (size_t i = 0; i < arr.length; i++)
        {
            if (i < removeIndex)
                newArr[i] = arr[i];
            else if (i > removeIndex)
                newArr[i - 1] = arr[i];
        }
        return GsDynamic(newArr);
    }
    
    GsDynamic mRemoveFront(GsDynamic[] args)
    {
        if (args.length < 2)
            return GsDynamic();
        
        if (args[1].type != GsDynamicType.Array)
            return GsDynamic();
        
        auto arr = args[1].asArray;
        if (arr.length == 0)
            return GsDynamic(arr);
        
        auto newArr = arena.create!(GsDynamic[])(arr.length - 1);
        for (size_t i = 1; i < arr.length; i++)
        {
            newArr[i - 1] = arr[i];
        }
        return GsDynamic(newArr);
    }
    
    GsDynamic mRemoveBack(GsDynamic[] args)
    {
        if (args.length < 2)
            return GsDynamic();
        
        if (args[1].type != GsDynamicType.Array)
            return GsDynamic();
        
        auto arr = args[1].asArray;
        if (arr.length == 0)
            return GsDynamic(arr);
        
        auto newArr = arena.create!(GsDynamic[])(arr.length - 1);
        for (size_t i = 0; i < newArr.length; i++)
        {
            newArr[i] = arr[i];
        }
        return GsDynamic(newArr);
    }
    
    GsDynamic mInsert(GsDynamic[] args)
    {
        if (args.length < 4)
            return GsDynamic();
        
        if (args[1].type != GsDynamicType.Array)
            return GsDynamic();
        
        auto arr = args[1].asArray;
        auto insertIndex = cast(size_t)args[2].asNumber;
        if (insertIndex < 0)
            return args[1];
        
        auto value = args[3];
        
        auto newArr = arena.create!(GsDynamic[])(arr.length + 1);
        for (size_t i = 0; i < newArr.length; i++)
        {
            if (i < insertIndex)
                newArr[i] = arr[i];
            else if (i == insertIndex)
                newArr[i] = value;
            else
                newArr[i] = arr[i - 1];
        }
        return GsDynamic(newArr);
    }
    
    GsDynamic mSlice(GsDynamic[] args)
    {
        if (args.length < 4)
            return GsDynamic();
        
        if (args[1].type != GsDynamicType.Array)
            return GsDynamic();
        
        auto arr = args[1].asArray;
        
        auto sliceStartIndex = cast(size_t)args[2].asNumber;
        if (sliceStartIndex < 0 || sliceStartIndex >= arr.length)
            return args[1];
        
        auto sliceEndIndex = cast(size_t)args[3].asNumber;
        if (sliceEndIndex < sliceStartIndex || sliceEndIndex > arr.length)
            return args[1];
        
        if (sliceEndIndex == sliceStartIndex)
            return GsDynamic([]);
        else
            return GsDynamic(arr[sliceStartIndex..sliceEndIndex]);
    }
}
