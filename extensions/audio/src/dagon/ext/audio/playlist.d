module dagon.ext.audio.playlist;

import std.path;
import std.algorithm;

import dlib.core.memory;
import dlib.core.ownership;
import dlib.container.array;
import dlib.text.str;

import soloud;
import dagon.core.logger;
import dagon.ext.audio.audiomanager;

abstract class PlaylistTrack: Owner
{
    Playlist playlist;
    String filename;
    int voice;
    
    this(Playlist playlist, string filename)
    {
        super(playlist);
        this.playlist = playlist;
        this.filename = String(filename);
    }
    
    SoloudObject load();
    
    bool isPlaying()
    {
        return playlist.audioManager.isPlaying(voice);
    }
    
    void play()
    {
        SoloudObject audioSrc = load();
        voice = playlist.audioManager.playMusic(audioSrc, false);
        // TODO: fade in
    }
    
    void stop()
    {
        if (isPlaying)
            playlist.audioManager.stop(voice);
    }
    
    ~this()
    {
        filename.free();
    }
}

class StreamedMusicTrack: PlaylistTrack
{
    WavStream wavStream;
    
    this(Playlist playlist, string filename)
    {
        super(playlist, filename);
        wavStream = WavStream.create();
    }
    
    override SoloudObject load()
    {
        playlist.audioManager.loadMusic(wavStream, filename);
        return wavStream;
    }
    
    ~this()
    {
        wavStream.free();
    }
}

class OpenMPTTrack: PlaylistTrack
{
    Openmpt openmpt;
    
    this(Playlist playlist, string filename)
    {
        super(playlist, filename);
        openmpt = Openmpt.create();
    }
    
    override SoloudObject load()
    {
        playlist.audioManager.loadTrackerMusic(openmpt, filename);
        return openmpt;
    }
    
    ~this()
    {
        openmpt.free();
    }
}

class Playlist: Owner
{
    AudioManager audioManager;
    Array!PlaylistTrack tracks;
    uint currentTrackIndex;
    PlaylistTrack currentTrack;
    bool looping = true;
    
    static immutable string[] streamedFormats = [
        ".wav", ".mp3", ".ogg", ".m4a", ".flac",
        ".WAV", ".MP3", ".OGG", ".M4A", ".FLAC"
    ];

    static immutable string[] openmptFormats = [
        ".mod", ".xm", ".s3m", ".it",
        ".MOD", ".XM", ".S3M", ".IT"
    ];
    
    this(AudioManager audioManager, Owner owner)
    {
        super(owner);
        this.audioManager = audioManager;
    }
    
    ~this()
    {
        tracks.free();
    }
    
    PlaylistTrack addTrack(PlaylistTrack t)
    {
        tracks.append(t);
        return t;
    }
    
    PlaylistTrack addTrack(string filename)
    {
        string ext = extension(filename);
        if (streamedFormats.canFind(ext))
        {
            auto t = New!StreamedMusicTrack(this, filename);
            tracks.append(t);
            return t;
        }
        else if (openmptFormats.canFind(ext))
        {
            auto t = New!OpenMPTTrack(this, filename);
            tracks.append(t);
            return t;
        }
        else
        {
            logError("Failed to load \"", filename, "\": unknown audio format");
            return null;
        }
    }
    
    // TODO: addTracksFrom(string directory)
    
    PlaylistTrack play(uint track = 0)
    {
        // TODO: stop current
        if (currentTrack)
            currentTrack.stop();
        if (track < tracks.length)
        {
            currentTrackIndex = track;
            currentTrack = tracks[track];
            currentTrack.play();
            return currentTrack;
        }
        else
        {
            logError("Track index ", track, " is out of playlist range");
            return null;
        }
    }
    
    void update()
    {
        if (tracks.length == 0 || currentTrack is null)
            return;
        
        if (!currentTrack.isPlaying)
        {
            if (currentTrackIndex < tracks.length - 1)
                play(currentTrackIndex + 1);
            else if (looping)
                play(0);
            else
            {
                currentTrack = null;
                currentTrackIndex = 0;
            }
        }
    }
    
    // TODO: playRandom()
}
