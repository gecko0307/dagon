module dagon.ext.jolt.character;

import std.math;

import dlib.core.memory;
import dlib.core.ownership;
import dlib.math.vector;
import dlib.math.matrix;
import dlib.math.quaternion;
import dlib.math.transformation;
import dlib.math.utils;

import dagon.core.event;
import dagon.core.time;
import dagon.graphics.entity;

import bindbc.joltc;

import dagon.ext.jolt.world;
import dagon.ext.jolt.shapes;

class JoltCharacterController: EntityComponent
{
    JoltPhysicsWorld physicsWorld;
    RotatedTranslatedShape standingShape;
    JPH_CharacterVirtual* characterVirtual;
    Vector3f velocity = Vector3f(0.0f, 0.0f, 0.0f);
    
    Vector3f up = Vector3f(0.0f, 1.0f, 0.0f);
    
    JPH_GroundState groundState;
    
    Vector3f movementVelocity = Vector3f(0.0f, 0.0f, 0.0f);
    float jumpSpeed = 10.0f;
    float gravity = -30.0f;
    
    protected float verticalSpeed = 0.0f;
    protected bool jumped = false;
    
    this(EventManager eventManager, JoltPhysicsWorld physicsWorld, Entity entity, float height, float radius, float mass)
    {
        super(eventManager, entity);
        this.physicsWorld = physicsWorld;
        
        JPH_CharacterVirtualSettings characterSettings;
        JPH_CharacterVirtualSettings_Init(&characterSettings);
        
        auto capsuleShape = New!JoltCapsuleShape((height - radius * 2.0f) * 0.5f, radius, this);
        
        Vector3f capsuleOffset = Vector3f(0.0f, height * 0.5f, 0.0f);
        standingShape = New!RotatedTranslatedShape(capsuleShape, capsuleOffset, Quaternionf.identity, this);
        
        characterSettings.base.shape = standingShape.shape;
        characterSettings.base.supportingVolume = JPH_Plane(Vector3f(0.0f, 1.0f, 0.0f), -radius);
        
        characterVirtual = JPH_CharacterVirtual_Create(
            &characterSettings,
            &entity.position,
            null,
            cast(ulong)cast(void*)this,
            physicsWorld.physicsSystem);
        
        JPH_CharacterVirtual_SetMass(characterVirtual, mass);
        JPH_CharacterVirtual_SetMaxStrength(characterVirtual, 10000.0f);
        
        entity.autoUpdateTransformation = false;
    }
    
    void move(Vector3f velocity)
    {
        movementVelocity += velocity;
    }
    
    void jump(float speed)
    {
        jumpSpeed = speed;
        jumped = true;
    }
    
    override void update(Time t)
    {
        JPH_CharacterBase_GetUp(cast(JPH_CharacterBase*)characterVirtual, &up);
        groundState = JPH_CharacterBase_GetGroundState(cast(JPH_CharacterBase*)characterVirtual);
        
        velocity = movementVelocity;
        movementVelocity = Vector3f(0.0f, 0.0f, 0.0f);
        
        float verticalAcceleration = 0.0f;
        if (groundState == JPH_GroundState.OnGround)
        {
            verticalSpeed = 0.0f;
            if (jumped)
            {
                verticalSpeed = jumpSpeed;
                jumped = false;
            }
        }
        else
        {
            verticalAcceleration = gravity;
            jumped = false;
        }
        
        verticalSpeed += verticalAcceleration * t.delta;
        velocity += Vector3f(0.0f, verticalSpeed, 0.0f);
        
        JPH_CharacterVirtual_SetLinearVelocity(characterVirtual, &velocity);
        
        JPH_ExtendedUpdateSettings extendedUpdateSettings = {
            stickToFloorStepDown: Vector3f(0.0f, -0.01f, 0.0f),
            walkStairsStepUp: Vector3f(0.0f, 0.4f, 0.0f),
            walkStairsMinStepForward: 0.02f,
            walkStairsStepForwardTest: 0.15f,
            walkStairsCosAngleForwardContact: cos(degtorad(75.0f)),
            walkStairsStepDownExtra: Vector3f(0.0f, 0.0f, 0.0f)
        };
        JPH_CharacterVirtual_ExtendedUpdate(
            characterVirtual,
            t.delta,
            &extendedUpdateSettings,
            JoltObjectLayer.Moving,
            physicsWorld.physicsSystem,
            null, null);
        
        JPH_CharacterVirtual_GetPosition(characterVirtual, &entity.position);
        
        entity.prevTransformation = entity.transformation;
        
        entity.transformation =
            translationMatrix(entity.position) *
            entity.rotation.toMatrix4x4;
        entity.invTransformation = entity.transformation.inverse;
        
        entity.absoluteTransformation = entity.transformation;
        entity.invAbsoluteTransformation = entity.invTransformation;
        
        entity.prevAbsoluteTransformation = entity.prevTransformation;
    }
}
