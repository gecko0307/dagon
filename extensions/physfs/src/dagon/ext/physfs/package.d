class ArchiveFileStream: ArrayStream
{
    String filename;
    PHYSFS_file* physfsFile;
    ubyte[] buffer;
    
    this(string filename)
    {
        this.filename = String(filename);
        physfsFile = PHYSFS_openRead(this.filename.ptr);
        PHYSFS_sint64 size = PHYSFS_fileLength(physfsFile);
        buffer = New!(ubyte[])(size);
        long bytesRead = PHYSFS_read(physfsFile, buffer.ptr, 1, cast(uint)size);
        super(buffer);
    }
    
    ~this()
    {
        PHYSFS_close(physfsFile);
        Delete(buffer);
        filename.free();
    }
}

class PhysFS: ReadOnlyFileSystem
{
    Array!String searchPaths;
    
    this()
    {
    }
    
    ~this()
    {
        foreach(p; searchPaths)
        {
            p.free();
        }
        
        searchPaths.free();
    }
    
    void addSearchPath(string filename)
    {
        searchPaths.append(String(filename));
        PHYSFS_addToSearchPath(searchPaths[$ - 1].ptr, 1);
    }
    
    bool stat(string filename, out FileStat stat)
    {
        String fname = String(filename);
        if (PHYSFS_exists(fname.ptr))
        {
            stat.isDirectory = cast(bool)PHYSFS_isDirectory(fname.ptr);
            stat.isFile = !stat.isDirectory;
            auto f = PHYSFS_openRead(fname.ptr);
            stat.sizeInBytes = PHYSFS_fileLength(f);
            stat.modificationTimestamp = SysTime.fromUnixTime(PHYSFS_getLastModTime(fname.ptr));
            stat.creationTimestamp = stat.modificationTimestamp;
            stat.permissions = 0;
            PHYSFS_close(f);
            return true;
        }
        else
            return false;
    }
    
    InputStream openForInput(string filename)
    {
        return New!ArchiveFileStream(filename);
    }
    
    Directory openDir(string path)
    {
        // TODO
        return null;
    }
}

void initPhysFS(string argv0)
{
    PHYSFS_init(argv0.ptr);
}

void releasePhysFS()
{
    PHYSFS_deinit();
}

